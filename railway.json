{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd BudgetTracker && dotnet restore && dotnet publish -c Release -o /app/publish"
  },
  "deploy": {
    "startCommand": "cd BudgetTracker && dotnet run --urls http://0.0.0.0:$PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

