@model IEnumerable<BudgetTracker.Models.Expense>
@{
    ViewData["Title"] = "Harcamalar";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Harcamalar</h1>
        <a asp-action="Create" class="btn btn-primary">Yeni Harcama Ekle</a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Tarih</th>
                        <th>Kategori</th>
                        <th>Açıklama</th>
                        <th>Tutar</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model)
                    {
                        <tr>
                            <td>@expense.ExpenseDate.ToString("dd.MM.yyyy")</td>
                            <td>
                                <span class="badge" style="background-color: @expense.Category.Color">
                                    @expense.Category.Name
                                </span>
                            </td>
                            <td>@expense.Description</td>
                            <td><strong>@expense.Amount.ToString("C2")</strong></td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                <form asp-action="Delete" asp-route-id="@expense.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bu harcamayı silmek istediğinizden emin misiniz?')">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-info">
                        <td colspan="3"><strong>Toplam</strong></td>
                        <td><strong>@Model.Sum(e => e.Amount).ToString("C2")</strong></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>Henüz harcama kaydınız bulunmamaktadır. <a asp-action="Create">İlk harcamanızı ekleyin</a>.</p>
        </div>
    }
</div>




